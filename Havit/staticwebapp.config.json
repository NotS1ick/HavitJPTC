{
  "routes": [
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/Account/*",
      "methods": ["GET", "POST"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/Account/{0}"
    },
    {
      "route": "/Identity/*",
      "methods": ["GET", "POST"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/Identity/{0}"
    },
    {
      "route": "/Home/*",
      "methods": ["GET"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/Home/{0}"
    },
    {
      "route": "/HabitTracker/*",
      "methods": ["GET"],
      "allowedRoles": ["authenticated"],
      "rewrite": "/HabitTracker/{0}"
    },
    {
      "route": "/*",
      "methods": ["GET"],
      "allowedRoles": ["anonymous", "authenticated"],
      "rewrite": "/Home/Index"
    }
  ],
  "navigationFallback": {
    "rewrite": "/Home/Index",
    "exclude": [
      "/images/*.{png,jpg,gif}",
      "/css/*",
      "/js/*",
      "/api/*",
      "/.well-known/*"
    ]
  },
  "mimeTypes": {
    ".json": "text/json"
  },
  "responseOverrides": {
    "401": {
      "redirect": "/Account/Login",
      "statusCode": 302
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' data: https:; connect-src 'self' https://*.azurestaticapps.net;"
  }
}
